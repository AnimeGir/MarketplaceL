{
  "name": "backend",
  "version": "1.0.0",
  "description": "A simple GraphQL API boilerplate using Express, Apollo Server, TypeORM, TypeDI and much more.   This project was developed for study purposes and also for a GraphQL API presentation. I pretend to maintain this project and add new features to it, so feel free to suggest improvements and give any feedback ðŸ˜Š.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "prebuild": "del-cli --force ./build",
    "build": "tsc",
    "prestart": "yarn build",
    "start": "node -r dotenv/config build/app.js",
    "start:dev": "ts-node-dev --transpile-only -r dotenv/config src/app.ts",
    "test": "jest --projects ./tests/integration --runInBand",
    "db:migrate": "ts-node typeorm migrations:generate -n"
  },
  "dependencies": {
    "apollo-server-express": "^2.24.0",
    "apollo-server-testing": "^2.24.0",
    "class-validator": "^0.13.1",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "joi": "^17.4.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.32",
    "typeorm-typedi-extensions": "^0.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "del-cli": "^3.0.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "author": "",
  "license": "ISC"
}
